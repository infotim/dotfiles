" vim: set ft=vim:

call plug#begin('~/.vim/plugged')

Plug 'altercation/vim-colors-solarized'
Plug 'bling/vim-airline'
Plug 'ervandew/supertab'
Plug 'Shougo/vimproc.vim', {'do' : 'make'}
Plug 'Shougo/unite.vim'

call plug#end()

"altercation/vim-colors-solarized
colorscheme solarized

"bling/vim-airline'
let g:airline#extensions#tabline#enabled = 1
let g:airline_powerline_fonts = 1
set laststatus=2

"Shougo/unite.vim
let g:unite_source_grep_command = "ack-grep"
let g:unite_source_grep_default_opts = "-s -H --nopager --nocolor --nogroup --column --smart-case"
autocmd FileType unite call s:unite_settings()
function! s:unite_settings()
    let b:SuperTabDisabled=1
    imap <buffer> <C-c> <Plug>(unite_exit)
    imap <buffer> <Tab> <Plug>(unite_select_next_line)
endfunction

"""
set nocompatible
filetype plugin indent on

let mapleader = "\<Space>"

syntax on

set modeline
set modelines=2

set expandtab
set shiftwidth=4
set softtabstop=4
set tabstop=4

set cursorline
set number
set relativenumber
set showcmd

set wildmenu

set ignorecase
set smartcase

nnoremap / /\v
nnoremap ; :

nnoremap <leader>[ :bprev<CR>
nnoremap <leader>] :bnext<CR>
nnoremap <leader>b :Unite -no-split -buffer-name=buffers -start-insert buffer<CR>
nnoremap <leader>d :bdelete<CR>
nnoremap <leader>f :Unite -no-split -buffer-name=files -start-insert file_rec/async:!<CR>
nnoremap <leader>g :Unite -no-split -buffer-name=ack-grep -start-insert grep:.<CR>
nnoremap <leader>q :q<CR>
nnoremap <leader>w :w<CR>
vnoremap <leader>s :sort<CR>

